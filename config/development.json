{
  "address": "http://localhost:8002",
  "concurrency": 25,
  "objectMaxLimit": 100,

  "logging": {
    "severity": "trace",
    "targets": [
      {
        "type": "console",
        "formatter": "human"
      }
    ]
  },

  "rpc": {
    "clients": {
      "accounts": {
        "address": "tcp://localhost:5670"
      }
    }
  },

  "caches": {
    "jobs": {
      "address": "redis://localhost:6379/0"
    },
    "sessions": {
      "address": "redis://localhost:6379/1"
    }
  },

  "databases": {
    "mongo": {
      "address": "mongodb://localhost:27017",
      "options": {
        "poolSize": 5
      }
    },

    "elastic": {
      "address": "http://localhost:9200"
    }
  },

  "sessions": {
    "cookieName": "sessionid",
    "domain": ".bitscoop.com",
    "expiration": 1209600
  },

  "csrf": {
    "cookieName": "csrftoken",
    "domain": ".bitscoop.com",
    "saltLength": 64,
    "secretLength": 32
  },

  "staticfiles": {
    "directories": ["artifacts"],
    "path": "/static"
  },

  "templates": {
    "directory": "templates"
  },

  "validationSchemas": "schemas/**/*.json"
}
