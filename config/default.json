{
  "address": "http://localhost:8002",
  "concurrency": 25,
  "objectMaxLimit": 100,

  "logging": {
    "severity": "trace",
    "targets": [
      {
        "type": "console",
        "formatter": "human"
      }
    ]
  },

  "databases": {
    "mongo": {
      "address": "mongodb://localhost:27017",
      "options": {
        "poolSize": 5
      }
    },

    "elastic": {
      "address": "http://localhost:9200"
    }
  },

  "sessions": {
    "cookieName": "sessionid",
    "domain": ".bitscoop.com",
    "expiration": 1209600
  },

  "csrf": {
    "cookieName": "csrftoken",
    "domain": ".bitscoop.com",
    "saltLength": 64,
    "secretLength": 32
  },

  "staticfiles": {
    "directories": ["artifacts"],
    "path": "/static"
  },

  "templates": {
    "directory": "templates"
  },

  "validationSchemas": "schemas/**/*.json"
}
