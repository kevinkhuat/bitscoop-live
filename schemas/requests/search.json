{
  "id": "#/requests/search",
  "title": "SEARCH Request Parameters",
  "description": "Pagination parameters for collection SEARCH requests.",
  "type": "object",
  "properties": {
    "limit": {
      "type": "integer",
      "minimum": 1,
      "default": 100
    },
    "offset": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    },
    "q": {
      "type": "string"
    },
    "sortField": {
      "type": "string",
      "default": "_score"
    },
    "sortOrder": {
      "type": "string",
      "default": "desc",
      "oneOf": [
        {
          "pattern": "^asc$"
        },
        {
          "pattern": "^desc$"
        },
        {
          "pattern": "^\\+$"
        },
        {
          "pattern": "^-$"
        }
      ]
    }
  }
}
